<navigation-bar title="汉字解析" back="{{false}}" color="#4F8CFF" background="#F7FAFF"></navigation-bar>
<scroll-view class="bg-main" scroll-y="true" style="height: 100vh;">
  <view class="card">
    <view class="form-group">
      <label>输入要查询的汉字</label>
      <view class="input-group">
        <input class="input" placeholder="请输入单个汉字" maxlength="1" bindinput="onInput" value="{{hanzi}}" />
        <button class="btn-primary" bindtap="onQuery">查询</button>
      </view>
    </view>
  </view>
  <view wx:if="{{result}}">
    <view class="character-header">
      <view class="character-display">{{result.hanzi}}</view>
      <view class="character-pinyin">{{result.pinyin}}</view>
      <view class="character-radical">部首: {{result.bushou}} · 笔画: {{result.bihua}}画</view>
    </view>
    <view class="character-info">
      <view class="info-card">
        <view class="info-title">五行属性</view>
        <view class="info-value">{{result.wuxing}}</view>
      </view>
      <view class="info-card">
        <view class="info-title">吉凶寓意</view>
        <view class="info-value">{{result.jixiong}}</view>
      </view>
      <view class="info-card">
        <view class="info-title">姓名学笔画</view>
        <view class="info-value">{{result.xm_bihua}}</view>
      </view>
      <view class="info-card">
        <view class="info-title">常用度</view>
        <view class="info-value">{{result.common}}</view>
      </view>
    </view>
    <view class="meaning-section">
      <view class="section-title">基本释义</view>
      <view class="meaning-content">{{result.meaning}}</view>
    </view>
    <view class="meaning-section">
      <view class="section-title">姓名学解释</view>
      <view class="meaning-content">{{result.xm_meaning}}</view>
    </view>
    <view class="meaning-section">
      <view class="section-title">相关诗词</view>
      <view class="meaning-content">{{result.poem}}</view>
    </view>
  </view>
  <view wx:if="{{loading}}" class="loading">
    <text>正在解析汉字...</text>
  </view>
</scroll-view> 